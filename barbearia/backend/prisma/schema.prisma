model appointment {
  id        Int      @id @default(autoincrement())
  userId    Int
  serviceId Int
  date      DateTime
  status    String
  service   service  @relation(fields: [serviceId], references: [id])
  user      user     @relation(fields: [userId], references: [id])

  @@index([serviceId])
  @@index([userId])
}

model service {
  id          Int           @id @default(autoincrement())
  name        String
  price       Float
  image       String?  
  appointment appointment[]
  cart        cart[]  
}

model user {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  role        String
  keyAdm      String?      @default("")
  appointment appointment[]
  cart        cart[] 
}

model RevokedTokens {
  id           Int      @id @default(autoincrement())
  token        String   @unique
  revokedAt    DateTime @default(now())
}

model cart {
  id            Int          @id @default(autoincrement())
  userId        Int
  serviceId     Int
  quantity      Int          @default(1)
  service       service      @relation(fields: [serviceId], references: [id])
  user          user         @relation(fields: [userId], references: [id])

  @@index([serviceId])
  @@index([userId])
}

